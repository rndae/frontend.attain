<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar and PDF Loader</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Datepicker CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for centering */
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .centered-container .col-md-4 {
            text-align: center;
        }

        .centered-button {
            text-align: center;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar.ejs') %>

    <h1 class="text-center mt-4 mb-5">System Report</h1>

    <div class="container centered-container">
        <!-- Calendar mechanism to select start and end dates -->
        <div class="row">
            <div class="col-md-4">
                <label for="start-date" class="form-label">Start Date:</label>
                <input type="text" class="form-control" id="start-date">
            </div>
            <div class="col-md-4">
                <label for="end-date" class="form-label">End Date:</label>
                <input type="text" class="form-control" id="end-date">
            </div>
        </div>

        <!-- Download button centered below start and end dates -->
        <div class="row mt-4 centered-button">
            <div class="col-md-4">
                <button id="download-button" class="btn btn-primary">Download</button>
            </div>
        </div>
    </div>

   <!-- PDF viewer -->
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <!-- Add loading indicator inside the div -->
                <div id="loading-container">
                    <!-- Customize the loading indicator as needed -->
                </div>
                <embed id="pdf-viewer"  type="application/pdf" width="100%" height="800" toolbar="0"></embed> 
            </div>
        </div>
    </div>


    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap Datepicker JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="scripts/calendar.js"></script>
</body>
</html>
